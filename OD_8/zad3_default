server {
 listen 80;
 server_name page1.com;
 return 302 https://page1.com$request_uri;
}
server {
 listen 443 ssl http2;
 ssl_certificate_key /etc/ssl/private/page1.key;
 ssl_certificate /etc/ssl/certs/page1.pem;
 root /var/www/html/page1.com;
 index index.html index.htm index.nginx-debian.html;
 server_name _;
 location / {
 try_files $uri $uri/ =404;
 }
}
server {
 listen 80;
 server_name page2.com;
 return 302 https://page2.com$request_uri;
}
server {
 listen 443 ssl http2;
 ssl_certificate_key /etc/ssl/private/page2.key;
 ssl_certificate /etc/ssl/certs/page2.pem;
 root /var/www/html/page2.com;
 index index.html index.htm index.nginx-debian.html;
 server_name _;
 location / {
 try_files $uri $uri/ =404;
 }
}